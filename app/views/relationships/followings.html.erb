<div class="container">
  <div class="row">
    <div class="col-lg-3 side-bar">
      <h2>サイドバー</h2>
      <%= render 'members/info', member: current_member %>
    </div>
    <div class="col-lg-9">
      <h5>フォロー一覧</h5>
      <% if @members.exists? %>
        <table class="table">
          <thead>
            <tr>
              <th>プロフィール画像</th>
              <th>ユーザ名</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @members.each do |member| %>
              <tr>
                <td><%= attachment_image_tag(member, :image, :fill, 50, 50, fallback: "no-image-icon.png", size: "50x50") %></td>
                <td><%= link_to member.name,  member_path(member)  %></td>
                <td>フォロー数: <%= member.followings.count %></td>
                <td>フォロワー数: <%= member.followers.count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>