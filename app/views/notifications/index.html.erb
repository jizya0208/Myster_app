<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h4 class="text-center">Notice</h4>
      <div class="mt-3">
        <%= link_to destroy_all_members_notifications_path, method: :delete do %>
          <i class="fas fa-trash" style="color: black;"></i>
          <span style="color: black;">全削除</span>
        <% end %>
      </div>
      <!--該当するDBがなければインスタンス変数はfalseを返すので、条件式として利用する-->
      <% if @notifications %>
        <%= render 'notifications', notifications: @notifications %>
      <% else %>
        <p>通知はありません</p>
      <% end %>
    </div>
    <div class="col-lg-2 side-bar">
      <%= render 'members/info', member: current_member %>
    </div>
  </div>
</div>
