<!--Bootstrapの「card」コンポーネントを使用-->
<div class="containar py-5">
  <div class="row">
    <% articles.each do |article| %>
      <div class="card-box shadow-lg mt-3 mx-3" style="width: 15rem">
        <%= link_to article_path(article) do %>
          <%= attachment_image_tag(article.article_images.first, :image, :fill, 200, 200, format: 'png', fallback: "no-image.png", size:'200x200', class:"card-img-top") %>
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-2 p-1 mt-3">
          		<%= attachment_image_tag article.member, :image, :fill, 35, 50, fallback: "no-image.png", size: "40x50" %><br />
            </div>
            <div class="col-10">
              <p class="card-title">
                <%= link_to(article_path(article.id), class:"text-dark") do %>
                  <strong><i class="far fa-flag"></i><span> <%= article.title %></span></strong>
                <% end %>
              </p>
              <p><i class="fas fa-user"></i> By <%= link_to article.member.name, member_path(article.member), class:"text-dark" %></p>
              <p><i class="fas fa-comment"></i><%= link_to " #{article.article_comments.count} comments", article_path(article.id), class:"text-dark" %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= paginate articles %>