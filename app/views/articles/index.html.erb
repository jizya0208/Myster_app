<div class="container">
  <div class="row">
    <div class="col-lg-3 side-bar">
      <h2>サイドバー</h2>
      <%= render 'members/info', member: current_member %>
    </div>
    <div class="col-lg-9">
      <h5>シェア</h5>

      <%= form_with url: search_in_shares_path, method: :get, local: true do |f| %>
        <%= f.collection_select :category_id, Category.all, :id, :name %>
        <%= f.submit '検索', class: 'btn btn-primary'  %>
      <% end %>
  

      <%= render 'index', articles: @articles %>
    </div>
  </div>
</div>

