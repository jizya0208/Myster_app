<div class="container">
  <p>検索ワード: <%= @keyword %></p>
  <div class="row">
    <div class="col-lg-10">
      <% if @articles.present? %>
        <% @articles.each do |article| %>
          <%= link_to emphasize_keyword(article.title, @keyword), article_path(article) %>
          <p><%= emphasize_keyword(article.body, @keyword) %></p>
        <% end %>
      <% else %>
        <label>検索結果がありません。</label>
      <% end %>
    </div>
    <div class="col-lg-2 side-bar">
      <%= render 'members/info', member: current_member %>
    </div>
  </div>
</div>