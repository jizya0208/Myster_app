<div class="container article-list">
  <div class="row">
    <div class="col-lg-10">
      <div class="d-flex justify-content-around">
        <h4>回答募集中</h4>
        <!--カテゴリーで絞込み-->
        <%= form_with url: questions_path, method: :get, local: true do |f| %>
          <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "ジャンルで絞り込む" }, class:"ml-5" %>
          <%= f.submit '検索', class: 'btn btn-sm btn-danger' %>
        <% end %>
      </div>
      <div class="scroll-list jscroll", id="scroll-list_articles">
        <%= render 'index', articles: @question_articles %>
        <%= paginate @question_articles %>
      </div>
      <div class="scroll-menu text-center">
        <% unless @question_articles.last_page? %> <!--最終ページでない限り読み込みボタンを表示-->
          <button class="loadmore-btn" type="button">もっと見る</button>
        <% end %>
        <div class="page-load-status" style="display:none;">
          <div class="infinite-scroll-request">ロード中</div>
          <p class="infinite-scroll-last">これ以上は記事がありません</p>
          <p class="infinite-scroll-error">読み込むページがありません</p>
        </div>
      </div>
    </div>
    <div class="col-lg-2 side-bar">
      <%= render 'members/info', member: current_member %>
    </div>
  </div>
</div>