<!--———————-—会員情報を表示-————————————-->
<table class='table'>
  <tr>
    <th><%= attachment_image_tag(member, :image, :fill, 40, 30, format: 'png', fallback: "no-image-icon.png", size: '40x40') %></th>
	  <th><%= link_to member.name, member_path(current_member) %></th>
	</tr>
  <tr>
    <th>follows</th>
    <th><%= link_to member.followings.count, member_followings_path(member) %></th>
  </tr>
    <tr>
    <th>followers</th>
    <th><%= link_to member.followers.count, member_followers_path(member) %></th>
  </tr>
</table>

<!--———————-—ユーザ編集ページへのリンク-————————————-->
  <% if current_member == member %>
    <%= link_to '',edit_member_path(member),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_member_#{member.id}" %>
    <%= link_to 'チャージ', new_account_account_history_path(member.account.id),class: "btn btn-outline-secondary btn-block" %>
    <%= link_to '履歴', account_account_histories_path(member.account.id),class: "btn btn-outline-secondary btn-block" %>
    <p>現在残高：<%= current_member.account.balance %>p</p>
  <% end %>


<!--———————-—フォローボタンを表示-————————————-->
<div class="mb-5">
  <div class="follow">
    <% unless current_member == member %>
      <% if current_member.following?(member) %>
        <%= link_to 'フォロー解除', member_relationships_path(member), method: :delete, class: "btn btn-info" %>
      <% else %>
        <%= link_to 'フォローする', member_relationships_path(member), method: :post, class: "btn btn-success"%>
      <% end %>
    <% end %>
  </div>
</div>



