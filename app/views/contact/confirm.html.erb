<div class="container">
  <div class="row">
    <div class="col-lg-10 form-wrap">
      <h4>お問い合わせ内容確認</h4>
      <%= form_with(model: @contact, url: thanks_path, local: true) do |f| %>
        <table class="table">
        　<tr>
            <th style="width:20%">お名前</th>
            <td style="width:80%"><%= f.hidden_field :name %><%= @contact.name %></td>
          </tr>
          <tr>
            <th>お問合わせ内容</th>
            <td><%= f.hidden_field :message %><%= simple_format(@contact.message) %></td> <!-- simple_formatは改行文字を含むテキストをブラウザ上で表示させるためのヘルパーメソッド-->
          </tr>
          <tr>
            <td>
              <input type="button" onclick="history.back()" value="戻って修正する" class="btn btn-secondary">
            </td>
            <td>
              <%= f.button type: "submit", class: "btn btn-danger" do %>
            　  送信 <i class="fas fa-paper-plane"></i>
              <% end %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
    <div class="col-lg-2 side-bar">
      <%= render 'members/info', member: current_member %>
    </div>
  </div>
</div>
